{
  "ReverseProxy": {
    "Routes": {
      "serviceA": {
        "ClusterId": "clusterA",
        "Match": {
          "Path": "/serviceA/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/serviceA" }
        ]
      },
      "serviceB": {
        "ClusterId": "clusterB",
        "Match": {
          "Path": "/serviceB/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/serviceB" }
        ]
      }
    },
    "Clusters": {
      "clusterA": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7059/" }
        }
      },
      "clusterB": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7082/" }
        }
      }
    }
  }
}
